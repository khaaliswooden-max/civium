# ==============================================================================
# CIVIUM - Environment Configuration Template
# ==============================================================================
# Rename this file to .env and fill in your values
# NEVER commit .env to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# General Settings
# ------------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-in-production

# ------------------------------------------------------------------------------
# Service Ports
# ------------------------------------------------------------------------------
REGULATORY_INTELLIGENCE_PORT=8001
COMPLIANCE_GRAPH_PORT=8002
ENTITY_ASSESSMENT_PORT=8003
VERIFICATION_PORT=8004
MONITORING_PORT=8005
API_GATEWAY_PORT=8000

# ------------------------------------------------------------------------------
# PostgreSQL (Entity Data)
# ------------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=civium
POSTGRES_PASSWORD=civium_dev_password
POSTGRES_DB=civium
DATABASE_URL=postgresql+asyncpg://civium:civium_dev_password@localhost:5432/civium

# ------------------------------------------------------------------------------
# Neo4j (Compliance Graph)
# ------------------------------------------------------------------------------
NEO4J_HOST=localhost
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_USER=neo4j
NEO4J_PASSWORD=civium_graph_password
NEO4J_URI=bolt://localhost:7687

# ------------------------------------------------------------------------------
# MongoDB (Regulatory Documents)
# ------------------------------------------------------------------------------
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=civium
MONGODB_PASSWORD=civium_mongo_password
MONGODB_DB=civium_regulations
MONGODB_URI=mongodb://civium:civium_mongo_password@localhost:27017/civium_regulations?authSource=admin

# ------------------------------------------------------------------------------
# Redis (Cache & Sessions)
# ------------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=civium_redis_password
REDIS_URL=redis://:civium_redis_password@localhost:6379/0

# ------------------------------------------------------------------------------
# InfluxDB (Time-Series Metrics)
# ------------------------------------------------------------------------------
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_TOKEN=civium_influx_token_change_me
INFLUXDB_ORG=civium
INFLUXDB_BUCKET=compliance_metrics
INFLUXDB_URL=http://localhost:8086

# ------------------------------------------------------------------------------
# Kafka (Event Streaming)
# ------------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# ------------------------------------------------------------------------------
# LLM Configuration
# ------------------------------------------------------------------------------
# Primary provider: claude | openai | ollama
LLM_PROVIDER=claude

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# OpenAI (backup)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Ollama (local)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.3:70b

# LLM Settings
LLM_TEMPERATURE=0.1
LLM_MAX_RETRIES=3
LLM_TIMEOUT_SECONDS=120

# ------------------------------------------------------------------------------
# Blockchain Configuration
# ------------------------------------------------------------------------------
# Mode: mock | testnet | mainnet
BLOCKCHAIN_MODE=mock

# Polygon Mumbai Testnet (Phase 2+)
# ALCHEMY_API_KEY=your-alchemy-api-key
# POLYGON_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/${ALCHEMY_API_KEY}
# PRIVATE_KEY=your-wallet-private-key

# Contract Addresses (populated after deployment)
# AUDIT_CONTRACT_ADDRESS=0x...
# DID_REGISTRY_ADDRESS=0x...

# ------------------------------------------------------------------------------
# Authentication
# ------------------------------------------------------------------------------
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Providers (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# ------------------------------------------------------------------------------
# Monitoring & Observability
# ------------------------------------------------------------------------------
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# OpenTelemetry
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=civium

# Sentry (optional)
# SENTRY_DSN=

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ------------------------------------------------------------------------------
# CORS
# ------------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# ------------------------------------------------------------------------------
# File Storage
# ------------------------------------------------------------------------------
# Mode: local | s3
STORAGE_MODE=local
STORAGE_LOCAL_PATH=./data/uploads

# AWS S3 (production)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=civium-documents

